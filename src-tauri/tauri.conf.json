{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "cs2-hud",
  "version": "0.1.0",
  "identifier": "com.jay.cs2-hud",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "CS2 HUD Control Panel",
        "width": 800,
        "height": 600,
        "url": "/"
      },
      {
        "label": "overlay",
        "title": "CS2 HUD Overlay",
        "width": 1920,
        "height": 1080,
        "url": "/overlay"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
